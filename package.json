{
  "name": "standard-forestry-operations-api",
  "version": "0.0.1",
  "description": "",
  "author": "Mike Coats <mike.coats@nature.scot>",
  "repository": "github:Scottish-Natural-Heritage/standard-forestry-operations-api",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "premigrations": "npx sequelize-cli db:migrate --env preMigrations --migrations-path util/db/pre-migrations >/dev/null",
    "migrations": "npx sequelize-cli db:migrate --env database >/dev/null",
    "prestart": "npm run migrations",
    "start": "node --no-warnings src/server.js",
    "dev": "SFO_API_PORT=3999 nodemon --exec \"npm run lint && npm run start\" -e js",
    "nm:run": "newman run tests/v1-standard-forestry-operations-api.postman_collection.json && newman run tests/v2-standard-forestry-operations-api.postman_collection.json",
    "pretest": "rm .development.db || true",
    "test": "start-server-and-test start http://localhost:3003/standard-forestry-operations-api/v1/health nm:run"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "naturescot-utils": "^1.2.0",
    "notifications-node-client": "^5.1.0",
    "on-finished": "^2.3.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "sqlite3": "^5.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "newman": "^5.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.3.1",
    "start-server-and-test": "^1.12.5",
    "xo": "^0.40.3"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "unicorn/prefer-module": 0,
      "unicorn/prefer-node-protocol": 0,
      "import/extensions": 0,
      "new-cap": 0,
      "no-console": 0
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "trailingComma": "none"
  }
}

{
  "name": "standard-forestry-operations-api",
  "version": "0.0.1",
  "description": "",
  "author": "Mike Coats <mike.coats@nature.scot>",
  "repository": "github:Scottish-Natural-Heritage/standard-forestry-operations-api",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "lint:code:fix": "xo --fix",
    "premigrations": "npx sequelize-cli db:migrate --env preMigrations --migrations-path util/db/pre-migrations >/dev/null",
    "migrations": "npx sequelize-cli db:migrate --env database >/dev/null",
    "prestart": "npm run migrations",
    "start": "node --no-warnings src/server.js",
    "dev": "SFO_API_PORT=3999 nodemon --exec \"npm run lint && npm run start\" -e js",
    "nm:run": "newman run tests/v2-standard-forestry-operations-api.postman_collection.json",
    "pretest": "rm .development.db || true",
    "test": "start-server-and-test start http://localhost:3003/standard-forestry-operations-api/v1/health nm:run",
    "local:start-postgres": "docker start sfo-database || ( docker run --name sfo-database -e POSTGRES_USER=licensing -e POSTGRES_PASSWORD=${LICENSING_DB_PASS-override_this_value} -p 5432:5432 --restart=always -d postgres:alpine; echo Created new container. )",
    "local:stop-postgres": "docker stop sfo-database",
    "local:delete-postgres": "docker rm -f sfo-database"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.2",
    "express": "^4.18.1",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.5",
    "morgan": "^1.10.0",
    "naturescot-utils": "^1.2.0",
    "node-cron": "^3.0.2",
    "notifications-node-client": "^8.1.0",
    "on-finished": "^2.3.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "newman": "^6.2.1",
    "nodemon": "^3.1.0",
    "prettier": "^2.3.1",
    "start-server-and-test": "^2.0.3",
    "xo": "^0.58.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "unicorn/prefer-module": 0,
      "unicorn/prefer-node-protocol": 0,
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": {
              "app": false
            }
          }
        }
      ],
      "import/extensions": 0,
      "new-cap": 0,
      "no-console": 0
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "trailingComma": "none"
  }
}
